<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.udacity.study.jam.radiotastic" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".view.activity.StationsActivity"
            android:label="@string/stations_activity_title" />

        <activity
            android:name=".view.activity.DetailActivity"
            android:label="@string/station_activity_title" />

        <service
            android:name=".player.PlayerIntentService"
            android:exported="false" >
            <intent-filter>
                <action android:name="com.udacity.study.jam.radiotastic.player.action.PLAY" />
                <action android:name="com.udacity.study.jam.radiotastic.player.action.STOP" />
            </intent-filter>
        </service>

        <provider
            android:name="com.udacity.study.jam.radiotastic.data.cache.db.AppProvider"
            android:authorities="com.udacity.study.jam.radiotastic.data.cache.db.provider"
            android:exported="false" />

    </application>

</manifest>
